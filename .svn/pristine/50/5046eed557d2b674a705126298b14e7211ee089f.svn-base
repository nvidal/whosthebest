<div id="main-content">
	<div class="container">
		<div class="row hidden-sm hidden-xs">
			<div class="title">Equipo ideal del f√∫tbol uruguayo 
			</div>
			<br>
		</div>
		<div class="text-center">
		  <select ng-model="club">
		    <option ng-repeat="x in clubs">{{x.name}}</option>
		  </select>
		  <select ng-model="formacion">
		    <option ng-repeat="x in formaciones">{{x}}</option>
		  </select>

		  <button type="button" class="btn btn-default" ng-click="generar()" aria-label="Left Align">
		    <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
		  </button>
		  
		</div>
		<div class="row">	
			<div class="lineup-general">
				<div class="lineup-container">
					<img class="cancha" src="../images/field.png">
					
					<div ng-repeat="player in arq" class="lineup-player {{player.css}}">
						<img class="lineup-img" src="{{player.image}}">					
					</div>
	
					<div ng-repeat="player in def" class="lineup-player {{player.css}}">
						<img class="lineup-img" src="{{player.image}}">					
					</div>

					<div ng-repeat="player in med" class="lineup-player {{player.css}}">
						<img class="lineup-img" src="{{player.image}}">					
					</div>

					<div ng-repeat="player in del" class="lineup-player {{player.css}}">
						<img class="lineup-img" src="{{player.image}}">					
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
