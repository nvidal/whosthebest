</header>
<!-- inicio jugadores -->
<div id="main-content">
	<div class="container">
		<div class="row">	
			<div class="col-md-3">
			</div>		
			<div class="col-md-3">
				<h4>{{player1.name}} {{player1.lastname}}</h4>						
				<p class="thumbnail">
					<img src="{{player1.image}}" alt="" class="player" ng-click="vot1()">
				</p>
				<p>
					<table class="table table-user-information">
						<tbody>
						  <tr>
							<td>Posición:</td>
							<td>{{player1.position}}</td>
						  </tr>
						  <tr>
							<td>Equipo:</td>
							<td>{{player1.club}}</td>
						  </tr>								  
						</tbody>
					  </table>
					  <div class="text-center">
						<button class="btn btn-default btn-lg"  role="button" ng-click="vot1()">
			    				<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> Votar
						</button>
					 </div>
					<div class="spacer">
					</div>
				</p>
			</div>
			<div class="col-md-3">
				<h4>{{player2.name}} {{player2.lastname}}</h4>						
				<p class="thumbnail">
					<img src="{{player2.image}}" alt="" class="player" ng-click="vot2()">
				</p>
				<p>
					<table class="table table-user-information">
						<tbody>
						  <tr>
							<td>Posición:</td>
							<td>{{player2.position}}</td>
						  </tr>
						  <tr>
							<td>Equipo:</td>
							<td>{{player2.club}}</td>
						  </tr>								  
						</tbody>
					  </table>
					  <div class="text-center">
						<button class="btn btn-default btn-lg" role="button" ng-click="vot2()">
			    				<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> Votar
						</button>
					 </div>
					<div class="spacer">
					</div>
				</p>
			</div>
		</div>

		<nav>
		  <ul class="pager">
			<li><a href="#/vote" >Saltear <span aria-hidden="true">&rarr;</span></a></li>
		  </ul>
		</nav>	
	</div>
</div>

