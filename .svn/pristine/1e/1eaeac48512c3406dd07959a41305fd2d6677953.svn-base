/* fuentes */
@import url('http://fonts.googleapis.com/css?family=Lato:400,300,700,900');
@import url(http://fonts.googleapis.com/css?family=Montserrat:400,700);
@import url(http://fonts.googleapis.com/css?family=Lobster+Two:400,700);

/* general */
body {
	background: #f8f8f8 url(../images/pattern.jpg);
	border-top: 4px solid #47AFAF;
	font-family:'Open Sans', Arial, sans-serif;
	font-size:14px;
	font-weight:300;
	line-height:1.6em;
	color:#656565;
	overflow-x:hidden;
 }
 
p {
	color:#656565;
	font-family:'Open Sans', Arial, sans-serif;
	font-weight:300;
}

h1 {
	font: 600 45px/1.3 'Lobster Two', Helvetica, sans-serif;
	color: #fff;
	text-shadow: 4px 4px 0px rgba(0,0,0,0.1); 
}

h2, h3, h4, h5, h6 {
	font-family: 'Montserrat', sans-serif;
	font-weight:800;
	font-size:1.4em;
	line-height:1.2em;
	color:#518D8A;
	margin-bottom: 5px;
	text-align: center;
}

.spacer {
   	margin-top: 30px; 
}

.pager {
   	margin-top: 0px;
	margin-bottom: 0px;	
}


/* cabezal y menu */
.main-menu {
	background-color:#B94629;	
}

.dropdown ul.nav li a {
	color:#fff;

}

.dropdown ul.nav li a:hover {
	color:#47AFAF;

}

h1 a.navbar-brand {
	font-size: 25px;
	color: #fff;
	font-weight: 700;
	text-shadow: none;
	margin-bottom: 10px;
	margin-top:-10px;
}

span {
	color:#428bca;
}
.nav-pills  {
    float: right;
	font-weight:800;
	color:#fff;
}
ul.nav-pills  {
	margin-top:15px;
	color:fff;
	padding:5px;
}

.nav-pills > li > a {
  border-radius: 4px;
}
.nav-pills > li + li {
  margin-left: 7px;
}
.nav-pills > li.active > a,
.nav-pills > li.active > a:hover,
.nav-pills > li.active > a:focus {
  color: #fff;
  background-color: #EEE;
}
.nav-pills > li.active > a{
	background-color: #47AFAF;
}

.nav-pills > li.active > a:focus {
	background-color: #000;
}


.slider {
	margin-top:10px;
	margin-bottom:-30px;
}

/* --- jugadores --- */

#main-content {
	padding:50px 0;	
}
.big-box {
	margin-bottom:40px;
}

.align-center:hover  i {
	color:#428bca;	
	-webkit-transition-duration: 2s;
  -moz-transition-duration: 2s;
  -o-transition-duration: 2s;
  transition-duration: 2s;
}	

.box-bg {  	
	margin-bottom:80px; 
}

.thumbnail {
  display: block;
  padding: 0px;
  background-color: transparent;
  border: 0px solid #ddd;
  margin-top: 10px; 
  border-radius: 1px;
  -webkit-transition: all .2s ease-in-out;
       -o-transition: all .2s ease-in-out;
          transition: all .2s ease-in-out;
  
}

.player {
  max-height: 240px;
  background-color: #fff;
  border: 1px solid #ddd;
  padding: 4px;
  cursor: pointer;
}


/* footer */

section#footer {
	background: #242424;
	border-top: 4px solid #B94629;
	margin-bottom:-30px;
	padding:10px;
}

section#footer .copyright {
	text-align: center;
}

/* footer social  */
.social-links {
    margin: 0 50px 0 50px;
    padding-top: 10px;
    text-align: center;
}

/* footer menu */
ul.footer-menu {
	list-style: none;
	display: inline;
	margin-left:0 !important;
	padding: 0;
}
ul.footer-menu li {
	display: inline;
	margin: 0 5px;
}

a.scrollup{
	height:30px;
	width:32px;
	color:#fff;
	font-size:18px;
	line-height:32px;
	text-align:center;
	text-decoration:none;
	position:fixed;
	bottom:40px;
	right:20px;
	z-index:9999;
	opacity:0.5;
}
a.scrollup:hover{
	opacity:1;
	color:#fff;
}



